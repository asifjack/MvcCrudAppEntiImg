@model IEnumerable<MvcCrudApp.Models.Employee>

<a asp-action="Create" asp-controller="Employee" class="btn btn-info">Create</a>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@employee.Email</td>
    <td>@employee.Mobile</td>
    <td>@employee.Address</td>
    <td><img src="@employee.Image" height="100" width="100"/></td>
    <td>
        <span><a asp-action="Update" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-success">Edit</a></span>
        <span>
            <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-danger"
               onclick="return confirm('Are you sure you want to delete this item ?')">Delete</a>
        </span>
    </td>
</tr>
    }
</table>